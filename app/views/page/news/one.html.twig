{% extends "pages.html.twig" %}

{% block title %}
    {{ news.news0title }}
{% endblock %}

{% block one_news %}

    {#<div class="row" style="position: fixed;">#}
        {#<div class="col-9"></div>#}
        {#<div class="col-3">#}
            {#{% for item in mirror %}#}
                {#<div class="row">#}
                    {#<div class="col-12 news_one-stat" style="height: 150px; background: url({{ item.img }}) center center / cover"></div>#}
                    {#<div class="col-12" style="font-size: 13px; font-weight: bold">{{ item.title_ua }}</div>#}
                    {#<div class="col-12">{{  }}</div>#}
                {#</div>#}
            {#{% endfor %}#}
        {#</div>#}
    {#</div>#}

    <div class="row" style="margin-top: 40px">
        <div class="col-12 col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-12">
                    <h1 class="news_one-title">{{ news.news0title }}</h1>
                    <div class="text" style="margin-bottom: 10px">
                        <span>Інфомує портал</span>
                        <a href="{{ news.donor0link }}">{{ news.donor0title }}</a>
                    </div>
                </div>
                <div class="col-12 news_one-stat">
                    <div class="row" style="font-size: 14px; color: #272727;">
                        <div class="col-12 text">
                            <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
                                <img height="13" width="13" src="/src/img/ico/Icons8-Ios7-Time-And-Date-Calendar.ico">
                                <span style="position: relative; top: 2px;">{{ val[0].news0time | date('d-m-y') }}</span>
                            </div>

                            <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
                                <img height="13" width="13" src="/src/img/ico/Icons8-Ios7-Time-And-Date-Clock.ico">
                                <span style="position: relative; top: 2px;">{{ val[0].news0time | date('H:i') }}</span>
                            </div>

                            <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
                                <img width="15" height="15" src="/src/img/ico/Praveen-Minimal-Outline-View.ico">
                                <span style="position: relative; top: 2px;">{{ news.news0views }}</span>
                            </div>

                            {#<div style="margin-left: 5px; margin-right: 5px; display: inline-block">#}
                                {#<img width="13" height="13" src="/src/img/ico/Iconsmind-Outline-Globe.ico">#}
                                {#<span style="position: relative; top: 2px;">{{ news.donor0title }}</span>#}
                            {#</div>#}
                        </div>
                    </div>
                </div>
                {% if news.news0img %}
                    <div class="col-12 news_one-img" style="background: url({{ news.news0img }}) no-repeat center center / cover"></div>
                {% endif %}
                <div class="col-12 news_one-text">{{ news.news0text | raw }}</div>
                <div class="col-12 news_one-tag">
                    {% for item in 0..3 %}
                        <div style="display: inline-block; height: 20px; width: 40px; color: red;">tag</div>
                    {% endfor %}
                </div>
            </div>
            {#<div class="row">#}
                {#{% for item in mirror %}#}
                    {#{{ item.donor }}#}
                {#{% endfor %}#}
            {#</div>#}
        </div>
        <div class="d-none col-xl-4 d-xl-block col-lg-4 d-lg-block">
            <div class="row">
                <div class="col-6">
                    <div class="mirror_off">
                        {% for item in mirror %}
                            <div style="margin-bottom: 30px">
                                <div style="height: 200px; width: 250px; background: url({{ item.news0img }}) center center / cover"></div>
                                <div style=" width: 250px; font-size: 14px; font-weight: bold">{{ item.news0title }}</div>
                            </div>

                            {#<div class="row">#}
                            {#<div class="col-12 news_one-stat" style="height: 150px; background: url({{ item.news0img }}) center center / cover"></div>#}
                            {#<div class="col-12"></div>#}
                            {#</div>#}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}