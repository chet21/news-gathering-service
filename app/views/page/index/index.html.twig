{% extends "index.html.twig" %}
{% block title %}
    Агрегатор новин України.
{% endblock %}
{% block hot_news %}

    <div class="container-fluid" style="background: #314241; box-shadow: #314241 5px 0 5px">
        <div class="container">
            <div class="row" style="padding: 40px 0 40px 0">
                {#<div class="col-xl-5 col-lg-5 col-md-6 col-sm-12 imgN block_news-size-big" style="background: url({{ big_img_news.img }}) no-repeat center center / cover">#}
                    {#<div class="block_news-pic-shadow"></div>#}
                    {#<div class="block_news-pic-marker">{{ big_img_news.category_ua }}</div>#}
                    {#<div class="block_news-pic-title"><a style="text-decoration: none; color: white;" href="/news/{{ big_img_news.num }}">{{ big_img_news.title_ua }}</a></div>#}
                {#</div>#}
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="row ">
                        {% for item in data %}
                            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 imgN block_news-size-small" style="background: url({{ item.news0img }}) no-repeat center center / cover">
                                <div class="block_news-pic-shadow"></div>
                                <div class="block_news-pic-marker text">{{ item.category0category }}</div>
                                <div class="block_news-pic-title"><a class="text" style="text-decoration: none; color: white;" href="/news/{{ item.news0id }}">{{ item.news0title }}</a> </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block cetegory_news %}
    {% for key,val in poligon %}
        {% if val is not empty %}
            <div class="row  category_news-block">
                <div class="col-12 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <div class="row" style="margin-bottom: 20px">
                        <div class="col-11 category_news-pic" style="background: url({{ val[0].news0img }});
                                background-size: cover;
                                background-position: center center;
                                background-repeat: no-repeat">
                            <div class="block_news-pic-marker text">{{ val[0].category0category }}</div>
                            <div class="block_news-pic-shadow"></div>
                            <div class="block_news-pic-title"><a class="link text" style="text-decoration: none; color: white" href="/news/{{ val[0].news0id }}">{{ val[0].news0title }}</a> </div>
                        </div>
                        {#<div class="col-11 category_news-title"></div>#}
                        <div class="col-12 category_news-statistic">
                            <div class="row">
                                <div class="col-12 text" style="font-size: 14px">
                                    <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
                                        <img height="13" width="13" src="/src/img/ico/Icons8-Ios7-Time-And-Date-Calendar.ico">
                                        <span style="position: relative; top: 2px;">{{ val[0].news0time | date('d-m-y') }}</span>
                                    </div>

                                    <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
                                        <img height="13" width="13" src="/src/img/ico/Icons8-Ios7-Time-And-Date-Clock.ico">
                                        <span style="position: relative; top: 2px;">{{ val[0].news0time | date('H:i') }}</span>
                                    </div>

                                    <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
                                        <img width="15" height="15" src="/src/img/ico/Praveen-Minimal-Outline-View.ico">
