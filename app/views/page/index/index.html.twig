                                    {#&nbsp;#}
                                    {#&nbsp;#}
                                    {#<img height="13" width="13" src="/src/img/ico/Icons8-Ios7-Time-And-Date-Clock.ico">#}
                                    {#<span style="font-size: 13px">{{ val[0].news0time | date('H:i') }}</span>#}
                                {#</div>#}
                                {#<div class="col-2">#}
                                    {#<img height="13" width="13" src="/src/img/ico/Praveen-Minimal-Outline-View.ico">#}
                                    {#<span style="font-size: 13px">{{ val[0].news0views }}</span>#}
                                {#</div>#}
                                {#<div class="col-1">{{ val[0].donor0title }}</div>#}
                            </div>
                        </div>
                        <div class="col-12 category_news-short text">
                            <span style="font-size: 18px">{{ val[0].news0text | striptags | slice(0, 200) }}</span>...
                            <div style="position: absolute; bottom: 0; height: 60px; width: inherit; background: linear-gradient(to bottom, rgba(0,0,0,0), rgba(247, 247, 247, 0.8))"></div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xl-6 col-lg-6 col-md-6 col-sm-12 category_news_rs-block">
                    {% for k,i in val %}
                        {% if k >= 1 %}
                            <div class="row category_news_rs-item">
                                <div class="col-3 category_news_rs-item-pic" style="background: url({{ i.news0img }}); background-position: center center; background-size: cover;"></div>
                                <div class="col-9">
                                    <div class="row">
                                        <div class="col-12 category_news_rs-item-title"><a class="category_news_rs-item-title text" style="text-decoration: none" href="/news/{{ i.news0id }}" >{{ i.news0title }}</a></div>
                                        <div class="col-12 category_news_rs-item-statistic">
                                            <div class="row">
                                                <div class="col-12 text">
                                                    <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
                                                        <img height="13" width="13" src="/src/img/ico/Icons8-Ios7-Time-And-Date-Calendar.ico">
                                                        <span style="position: relative; top: 2px;">{{ i.news0time | date('d-m-y') }}</span>
                                                    </div>

                                                    <div style="margin-left: 5px; margin-right: 5px; display: inline-block">
