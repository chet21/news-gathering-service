<div class="container-fluid" style="background: #272727;">
    <div class="container">
        <div class="row align-items-center">
            <div class="d-none col-xl-5 d-xl-block col-lg-5 d-lg-block col-md-10 d-md-block d-sm-none d-xs-none"  style="min-height: 40px;">
                {% if opt.city != null %}
                    <img class="service_img-top" src="/src/img/ico/maps-and-flags.png">
                    <span class="service_title-top">{{ location }}</span>
                {% endif %}
                {% if opt.calendar != null %}
                    <img class="service_img-top" src="/src/img/ico/icon-calendar.png">
                    <span class="service_title-top">{{ opt['calendar']['day'] }} {{ opt['calendar']['day_w'] }}</span>
                {% endif %}
                {% if opt.time != null %}
                    <img class="service_img-top" src="/src/img/ico/clock-circular-outline.png">
                    <span class="service_title-top">{{ time | date('H:i') }}, </span>
                {% endif %}
                {% if opt.temperature != null %}
                    <img class="service_img-top" src="/src/img/ico/thermometer.png">
                    <span class="service_title-top">{{ weather }}&deg;C </span>
                {% endif %}
            </div>
            <div class="d-none col-xl-3 d-xl-block col-lg-3 d-lg-block offset-xl-3 offset-lg-2 d-md-none d-sm-none d-xs-none"  style="min-height: 40px;">
                <form id="search_news" style="color: silver;">
                    <input class="search_block-top" type="text" style="color: white;" placeholder="Search" onclick="bigSearch()">
                </form>
            </div>
            <div class="d-none col-xl-1 d-xl-block col-lg-2 d-lg-block col-md-2 d-md-block ml-auto d-sm-none d-xs-none"  style="min-height: 40px;">
                <img style="width: 20px" src="/src/img/ico/ua.png">
                <img style="width: 20px" src="/src/img/ico/ru.png">
            </div>
        </div>
    </div>
</div>